[user]
	name = YusukeKokubo
	email = yusuke.kokubo@gmail.com
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	editor = vim
	precomposeunicode = true
	quotepath = false
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[alias]
	s = status
	b = branch
	bf = branch -f
	bfm = branch -f master origin/master
	ci = commit
	cia = commit --amend
	r  = rebase
	ri = rebase -i
	rc = rebase --continue
	ra = rebase --abort
	co = checkout
	rh = reset --hard
	rhm = reset --hard origin/master
	logg = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
	logall = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
	p = !git push origin `git rev-parse --abbrev-ref HEAD`
	pf = push -f
	ru = remote update
        cb = rev-parse --abbrev-ref HEAD
        rho = !git rh origin/`git cb`

echo = !echo test
[gpg]
	program = gpg2
[commit]
	gpgsign = true
